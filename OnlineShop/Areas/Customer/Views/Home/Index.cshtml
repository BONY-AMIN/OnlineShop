@using X.PagedList.Mvc.Core;
@using OnlineShop.Models
@model X.PagedList.IPagedList<Products>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<br />
<br />

<div class="row">
    @foreach (var product in Model)
    {
        <div class="col-md-4">
            <div class="card">
                <div class="card-header">
                    <h4 class="font-weight-normal">
                        <label style="font-size:23px;color:steelblue">@product.Name</label>
                    </h4>
                </div>
                <img src="~/@product.Image" alt="Card Image" class="card-img-top" style="height:300px;" />
                <div class="card-header">
                    <div class="d-flex justify-content-between align-items-center">
                        <div class="btn-group">
                            <label style="font-size:20px; color:#a51313"><b>Price : @product.Price</b></label>
                        </div>
                        <a asp-action="Details" asp-Controller="Home" asp-route-id="@product.Id" class="btn btn-success pull-right">Details</a>
                    </div>
                </div>
            </div>
        </div>
    }

</div>
<div>
    @Html.PagedListPager(Model, generatePageUrl: c => Href(contentPath: "~/Customer/Home/Index?page=" + c))
</div>
